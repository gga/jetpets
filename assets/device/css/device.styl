@import 'nib'
@import '_pages'
@import '_lobby'
@import '_gamepad'

global-reset()

*
  box-sizing: border-box

body
  margin: 0
  -webkit-font-smoothing: antialiased

#menu
  background: #333
  color: #eee
  font-size: 1.2em
  position: absolute
  right: 1em
  text-align: center
  top: 1em
  z-index: 1
  i
    display: block
    height: 2em
    line-height: 2.2em
    width: 2em

#page
  background: #eee
  border: 1em solid #333
  bottom: 0
  color: #333
  left: 0
  padding: 3em 2em 0 2em
  right: 0
  top: 0

h1
  font-size: 2em
  padding: 0.5em 0

p
  font-size: 1.1em
  line-height: 1.4em
  margin: 1em 0 2em 0
